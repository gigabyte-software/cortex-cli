{
    "name": "cortex/cli",
    "description": "A CLI tool for orchestrating Docker-based development environments",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Cortex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cortex\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40",
        "mockery/mockery": "^1.6"
    },
    "bin": ["bin/cortex"],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests --level=8",
        "cs-fix": "php-cs-fixer fix"
    }
}

